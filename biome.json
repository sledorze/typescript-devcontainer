{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "attributePosition": "multiline",
      "arrowParentheses": "asNeeded"
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "all": false
      },
      "performance": {
        "all": true
      },
      "security": {
        "all": true
      },
      "complexity": {
        "all": true
      },
      "suspicious": {
        "all": true
      },
      "nursery": {
        "all": true,
        "useComponentExportOnlyModules": "off",
        "useExplicitType": "off"
      },
      "correctness": {
        "all": true
      }
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "include": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.json"],
    "ignore": [
      "**/*.min.js",
      "dist",
      "build",
      "coverage",
      "playwright-report",
      "node_modules",
      ".*",
      "package-lock.json"
    ]
  }
}
