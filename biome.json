{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded"
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "all": false
      },
      "correctness": {
        "all": true
      }
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "include": [
      "*.ts",
      "*.tsx",
      "*.js",
      "*.jsx"
    ],
    "ignore": [
      "**/*.min.js",
      "dist",
      "coverage",
      "playwright-report",
      "node_modules",
      ".*"
    ]
  }
}